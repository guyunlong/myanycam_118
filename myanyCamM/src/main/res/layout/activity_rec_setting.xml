<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_black_background"
    android:orientation="vertical" >

    <include layout="@layout/settings_head" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip" >

            <LinearLayout
                android:id="@+id/rec_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/rec_allday_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/rec_allday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_margin"
                        android:layout_weight="1"
                        android:text="@string/all_day_rec"
                        android:textColor="#ffffffff"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/is_allday_rec"
                        android:layout_width="65dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="@dimen/item_margin"
                        android:src="@drawable/on" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#c4c4c4" />

                <LinearLayout
                    android:id="@+id/rec_alarm_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/rec_alarm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_margin"
                        android:layout_weight="1"
                        android:text="@string/alarm_record"
                        android:textColor="#ffffffff"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/is_alarm_rec"
                        android:layout_width="65dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="@dimen/item_margin"
                        android:src="@drawable/on" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#c4c4c4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarm_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/is_alarm_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/is_alarm_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_margin"
                        android:layout_weight="1"
                        android:text="@string/is_alarm"
                        android:textColor="#ffffffff"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/is_alarm_img"
                        android:layout_width="65dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="@dimen/item_margin"
                        android:src="@drawable/on" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#c4c4c4" />

                <LinearLayout
                    android:id="@+id/move_alarm_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/item_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:layout_weight="1"
                            android:text="@string/move_alarm"
                            android:textColor="#ffffffff"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/move_alarm_img"
                            android:layout_width="65dp"
                            android:layout_height="37dp"
                            android:layout_marginRight="@dimen/item_margin"
                            android:src="@drawable/on" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="#c4c4c4" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/voice_alarm_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/item_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:layout_weight="1"
                            android:text="@string/voice_alarm"
                            android:textColor="#ffffffff"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/voice_alarm_img"
                            android:layout_width="65dp"
                            android:layout_height="37dp"
                            android:layout_marginRight="@dimen/item_margin"
                            android:src="@drawable/on" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="#c4c4c4" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>