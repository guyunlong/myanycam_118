<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_white_background"
    android:orientation="vertical" >

    <include layout="@layout/settings_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_layout_height"
        android:layout_marginLeft="@dimen/register_margin_left"
        android:layout_marginRight="@dimen/register_margin_right"
        android:layout_marginTop="@dimen/register_margin_top"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/orgin_psw"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_edit_margin_left"
            android:layout_marginRight="@dimen/register_edit_margin_right"
            android:layout_weight="3"
            android:background="#00000000"
            android:hint="@string/orgin_psw"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="@dimen/register_edit_padding_left"
            android:textColor="#ffa8a8a8"
            android:textColorHint="#ffa8a8a8"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_layout_height"
        android:layout_marginLeft="@dimen/register_margin_left"
        android:layout_marginRight="@dimen/register_margin_right"
        android:layout_marginTop="@dimen/register_margin_top"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/new_psw"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_edit_margin_left"
            android:layout_marginRight="@dimen/register_edit_margin_right"
            android:layout_weight="3"
            android:background="#00000000"
            android:hint="@string/new_psw"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="10.0dip"
            android:textColor="#ffa8a8a8"
            android:textColorHint="#ffa8a8a8"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_layout_height"
        android:layout_marginLeft="@dimen/register_margin_left"
        android:layout_marginRight="@dimen/register_margin_right"
        android:layout_marginTop="@dimen/register_margin_top"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/confirm"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_edit_margin_left"
            android:layout_marginRight="@dimen/register_edit_margin_right"
            android:layout_weight="3"
            android:background="#00000000"
            android:hint="@string/confirm_pw_hint"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="10.0dip"
            android:textColor="#ffa8a8a8"
            android:textColorHint="#ffa8a8a8"
            android:textSize="18.0sp" />
    </LinearLayout>

    <Button
        android:id="@+id/chang_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@color/black"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/change_password"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

</LinearLayout>